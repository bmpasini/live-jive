<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "LiveJive", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav pull-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path %></li>
          <li><%= link_to "Bands", bands_path %></li>
          <li><%= link_to "Concerts", concerts_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% if session[:user_id] %>
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <% elsif session[:band_id] %>
                <li><%= link_to "Profile", current_band %></li>
                <li><%= link_to "Settings", edit_band_path(current_band) %></li>
              <% end %>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", user_login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>