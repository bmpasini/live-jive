<% if user_or_band == "Band" %>
	<li class="dropdown">
		<a href="#" class="dropdown-toggle" data-toggle="dropdown">
			Concerts <b class="caret"></b>
		</a>
		<ul class="dropdown-menu">
			<li><%= link_to "Show All", concerts_path %></li>
			<li><%= link_to "Sorted By Genre", bands_sorted_by_genre_path %></li>
		</ul>
	</li>	
<% elsif user_or_band == "User" %>
	<% if current_user.is_admin? %>
		<li class="dropdown">
			<a href="#" class="dropdown-toggle" data-toggle="dropdown">
				Concerts <b class="caret"></b>
			</a>
			<ul class="dropdown-menu">
				<li><%= link_to "Show All", concerts_path %></li>
				<li><%= link_to "Create New", new_concert_path %></li>
			</ul>
		</li>
	<% else %>
		<li><%= link_to "Concerts", concerts_path %></li>
	<% end %>
<% end %>