<% provide(:title, "Band Log In") %>
<h1>Band Log In</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: band_login_path) do |f| %>

      <%= f.label :bandname %>
      <%= f.text_field :bandname, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <br>

    <p>New band? <%= link_to "Sign up now!", band_signup_path %></p>
    
    <p>Are you a user? <%= link_to "User Login", user_login_path %></p>
  </div>
</div>