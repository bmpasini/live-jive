<% provide(:title, @concert.title) %>
<h1><%= @concert.title %></h1>

<ul class="users">
  <li>
    <strong>Description:</strong>
    <%= @concert.description %>
  </li>
  <li>
    <strong>Buy Tickets:</strong>
    <%= link_to @concert.buy_tickets_website, "#{@concert.buy_tickets_website}", :target => "_blank" %>
  </li>
  <li>
    <strong>Location:</strong>
    <%= @concert.location_name %>
  </li>
  <li>
    <strong>Date and Time:</strong>
    <%= @concert.cdatetime.to_formatted_s(:long_ordinal) %>
  </li>

  <li>
    <strong>Lineup:</strong>
    <ul>
      <% @concert.bands_playing.each do |band| %>
        <li>
          <%= band.name %>
        </li>
      <% end %>
    </ul>
  </li>

  <li>
    <strong>Genres Played:</strong>
    <ul>
      <% @concert.genres_played.each do |genre| %>
        <li>
          <%= genre %>
        </li>
      <% end %>
    </ul>
  </li>

  <li>
    <%= link_to 'Go Back', concert_path %>
  </li>
</ul>
