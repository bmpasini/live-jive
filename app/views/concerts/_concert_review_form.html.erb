<div id="review_form">
<% if current_user.is_going_to?(@concert) %>
	<% if @concert.cdatetime < Time.now %>
		<h2>Was the concert good?</h2>
		<div class="row">
		  <div class="col-md-6 col-md-offset-3">
		    <%= form_for @concert_going do |f| %>
		      <%= render 'shared/concert_going_error_messages' %>

		      <%= f.label :review %>
		      <%= f.text_area :review, class: 'form-control' %>

		      <%= f.label :rating %>
		      <%= f.select :rating, options_for_select([ 1 ,2 ,3, 4, 5 ]), class: 'form-control', include_blank: true %>

		      <%= f.submit "Review Concert", class: "btn btn-primary" %>
		    <% end %>
		  </div>
		</div>
	<% end %>
<% end %>
</div>