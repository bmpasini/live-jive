<h1>Listing bands</h1>

<table>
  <thead>
    <tr>
      <th>Bandname</th>
      <th>Name</th>
      <th>bio</th>
      <th>Website</th>
      <th>Email</th>
      <th>Identity confirmed?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bands.each do |band| %>
      <tr>
        <td><%= band.bandname %></td>
        <td><%= band.name %></td>
        <td><%= band.bio %></td>
        <td><%= band.website %></td>
        <td><%= band.email %></td>
        <td><%= band.identity_confirmed? %></td>
        <td><%= link_to 'Show', band %></td>
        <td><%= link_to 'Edit', edit_band_path(band) %></td>
        <td><%= link_to 'Destroy', band, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

