<ul class="users">
  <li>
    <strong>Bandname:</strong>
    <%= @band.bandname %>
  </li>

  <li>
    <strong>Name:</strong>
    <%= @band.name %>
  </li>

  <li>
    <strong>Bio:</strong>
    <%= @band.bio %>
  </li>

  <li>
    <strong>Website:</strong>
    <%= link_to @band.website, url_with_protocol(@band.website), :target => "_blank" %>
  </li>

  <li>
    <strong>Email:</strong>
    <%= link_to @band.email, "maito:#{@band.email}", :target => "_blank" %>
  </li>
  <li>
    <strong>Genres Played:</strong>
    <ul>
      <% @band.plays_genres.each do |genre| %>
        <li>
          <%= genre %>
        </li>
      <% end %>
    </ul>
  </li>
</ul>