<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span style="font-size: 14px; margin-top: 10px;"><b>Reputation Score:</b> <%= @user.reputation_score %></span>
      <span style="font-size: 14px; margin-top: 10px;"><%= link_to "view my profile", @user %></span>
    </section>
    <section class="stats">
      <%= render 'users/stats' %>
      <% if @concerts.any? %>
        <div class="user_avatars">
          <% @concerts.each do |concert| %>
          	<% concert.lineups.each do |lineup| %>
	            <%= link_to gravatar_for(lineup.band, size: 30), lineup.band %>
	        <% end %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @concerts.any? %>
      <ul class="users follow">
        <%= render @concerts %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>