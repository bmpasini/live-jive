<% provide(:title, @user.name) %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'users/gravatar' %>
      </section>
      <section class="stats">
        <%= render 'users/stats' %>
      </section>
      <section>
        <%= render 'users/profile' %>
      </section>
    </aside>
    <div class="col-md-8">
      <%= render 'follow_form' if logged_in? && user_or_band == "User" %>
    </div>
    <div class="col-md-8">
      <% if user_or_band == "User" %>
        <% if current_user?(@user) %>
          <%= render 'users/feed' %>
        <% else %>
          <%= render 'users/concert_list_handler' %>
        <% end %>
      <% end %>
    </div>
  </div>
<% else %>
  <script type="text/javascript">
    window.location.href="/user_login"  // put your correct path in a string here
  </script>
<% end %>