<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>City of birth:</strong>
  <%= @user.city_of_birth %>
</p>

<p>
  <strong>Year of Birth:</strong>
  <%= @user.year_of_birth %>
</p>

<p>
  <strong>Reputation:</strong>
  <%= @user.reputation_score %>
</p>

<p>
  <strong>Current Login:</strong>
  <%= time_ago_in_words(@user.last_login_at) %> ago
</p>

<p>
  <strong>Last Login:</strong>
  <%= time_ago_in_words(@user.penultimate_login_at) %> ago
</p>
